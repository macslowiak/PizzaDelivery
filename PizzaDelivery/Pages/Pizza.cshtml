@page
@model PizzaDelivery.Pages.PizzaModel
@{
}



<div class="text-center">
	<div class="mainText">
		<h1 class="display-4 text-capitalize text-black">Find the pizza you want</h1>
		<h4>Choose one, or try our Pizza Builder! Then Order and Done!</h4>
		<h4>No need to give any of your details!</h4>
		<h4>We already know everything!</h4>
		<p class="smallText"><i>Only one pizza per order</i></p>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-12 mb-5 mt-5 bg-secondary text-white">
				<div class="w-100 row makeYourOwnDiv d-flex align-items-center">
					<div class="col-4">
						<img class="w-100" src="~/images/Pizzas/Create.png" />
					</div>
					<div class="col-8 d-flex align-items-center">
						<div class="align-middle makeYourOwnText">
							<h3 style="text-align:left;">Create your own Pizza</h3>
							<p style="text-align:left;">Make your own pizza with our PizzaMaker</p>
							<a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try now</a>
						</div>
					</div>
				</div>
			</div>

			@foreach (var pizza in Model.fakePizzaDb)
			{
				var imagePath = "~/images/Pizzas/" + (pizza.ImageTitle + ".png");
				<div class="col-4 mb-5">
					<a asp-area="" asp-page="Checkout/Checkout" 
					asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice">
					<img src ="@imagePath" class="w-100" asp-append-version="true" />
					<br />
					</a>
				</div>
			}

		</div>
	</div>
</div>
