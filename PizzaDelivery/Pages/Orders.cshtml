@page
@model PizzaDelivery.Pages.OrdersModel
@{
}

<h2>Orders</h2>
<hr />
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Price</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var order in Model.PizzaOrders)
		{
			<tr>
				<th>@order.Id</th>
				<th>@order.PizzaName</th>
				<th>@order.BasePrice</th>
			</tr>
		}
	</tbody>
</table>